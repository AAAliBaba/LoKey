<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="LoKey.AddKeyPage">
    <ContentPage.Content>
        <StackLayout x:Name="stk_pt"
                     HorizontalOptions="Center"
                     VerticalOptions="Center">
            <Label Text="What is this Key for?"
                   HorizontalOptions="Center"
                   FontSize="Large"/>
            <Image Source="key.png"
                   HeightRequest="275"
                   WidthRequest="275"/>
            <Entry x:Name="entry_name"
                   WidthRequest="275"/>
            <Button x:Name="btn_commit"
                    BackgroundColor="lightgreen"
                    Margin="0,40,0,0"
                    Text="Save"
                    WidthRequest="275"
                    Clicked="onCommitClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
